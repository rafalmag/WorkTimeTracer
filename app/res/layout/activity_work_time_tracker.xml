<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".WorkTimeTracker">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/over_hours"
            android:id="@+id/overHours"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/start_time"
            android:layout_below="@+id/overHours"/>

    <TimePicker
            android:id="@+id/startTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_time"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:id="@+id/startNow"
            android:layout_toRightOf="@+id/startTimePicker"
            android:layout_below="@+id/start_time"/>

    <TextView
            android:id="@+id/stop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startTimePicker"
            android:layout_centerHorizontal="true"
            android:text="@string/stop_time"/>

    <TimePicker
            android:id="@+id/stopTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stop_time"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:id="@+id/stopNow"
            android:layout_toRightOf="@+id/startTimePicker"
            android:layout_below="@+id/stop_time"/>

    <!-- TODO breaktime-->

    <TextView
            android:id="@+id/diff_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stopTimePicker"
            android:layout_centerHorizontal="true"
            android:text="@string/diff_time"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log"
            android:id="@+id/log"
            android:layout_below="@+id/diff_time"/>


</RelativeLayout>